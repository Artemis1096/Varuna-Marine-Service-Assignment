generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Route {
  id                    String           @id @default(uuid())
  vesselType            String
  origin                String
  destination           String
  distance              Float
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  is_baseline           Boolean          @default(false)
  routeCode             String           @unique
  fuelConsumptionTonnes Float?
  fuelType              String?
  ghgIntensity          Float?
  year                  Int?
  totalEmissions        Float?
  bankEntries           BankEntry[]
  shipCompliance        ShipCompliance[]

  @@map("routes")
}

model ShipCompliance {
  id          String       @id @default(uuid())
  shipId      String
  shipName    String
  routeId     String
  year        Int
  cb          Float
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  poolMembers PoolMember[]
  route       Route        @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@unique([shipId, routeId, year])
  @@map("ship_compliance")
}

model BankEntry {
  id        String   @id @default(uuid())
  routeId   String
  year      Int
  amount    Float
  type      String
  applied   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  routeCode String
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@map("bank_entries")
}

model Pool {
  id          String       @id @default(uuid())
  name        String
  year        Int
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  members     PoolMember[]

  @@unique([name, year])
  @@map("pools")
}

model PoolMember {
  id               String         @id @default(uuid())
  poolId           String
  shipId           String
  routeId          String
  year             Int
  shipComplianceId String
  cbBefore         Float
  cbAfter          Float?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  pool             Pool           @relation(fields: [poolId], references: [id], onDelete: Cascade)
  shipCompliance   ShipCompliance @relation(fields: [shipComplianceId], references: [id], onDelete: Cascade)

  @@unique([poolId, shipId, routeId, year])
  @@map("pool_members")
}
